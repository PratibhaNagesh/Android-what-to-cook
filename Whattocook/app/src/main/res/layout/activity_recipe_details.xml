<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/recipe_details"
    tools:context="com.example.pratibha.whattocook.RecipeDetailsActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/ActivityText"
        android:paddingTop="260dp"
        android:paddingLeft="10dp"
        android:paddingRight="210dp"/>

    <TextView
        android:id="@+id/timeDifficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="60dp"/>

    <TextView
        android:id="@+id/ingredientsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeDifficultyTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="60dp"/>
    <ListView
        android:id="@+id/ingredientsListView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/ingredientsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingRight="250dp"/>

    <TextView
        android:id="@+id/directionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/timeDifficultyTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="15"
        android:scrollbars="vertical"
        android:paddingTop="0dp"
        android:paddingLeft="150dp"
        android:paddingRight="10dp"/>

    <Button
        android:id="@+id/recipeDetailsBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/recipeHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
